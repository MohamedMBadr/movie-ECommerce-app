@model Cinema

@{
    ViewData["Title"] = "Delete The Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.Name</h1>
        </p>
        <div class="row">

            <div class="col-md-8 offset-2">

                <partial name="PartialViews/DetailsDeleteCinemaPartialView" />


                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger text-white float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>

            </div>


        </div>

    </div>

</div>
@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })

    
    </script>
    }
